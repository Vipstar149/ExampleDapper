@model IEnumerable<DemoDapper.Models.StaffModel>
@{
    ViewData["Title"] = "Staff";
}
<!--<h2>Account tools</h2>-->
<div class="page-header">
    <h1>Search <small>Staff</small></h1>
</div>


@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        <strong>Ops!</strong> I didn't find any account with this name.
    </div>
}
else
{
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().StaffName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Department.DepartmentName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.StaffName)</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Actions</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
